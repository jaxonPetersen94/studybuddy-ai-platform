# Server Configuration
DEBUG=false
HOST=0.0.0.0
PORT=5002
ENVIRONMENT=production

# Logging
LOG_LEVEL=INFO

# CORS (using service names for Docker network communication)
CORS_ORIGINS=["http://frontend:80","http://api-gateway:3001","http://localhost:3000","http://localhost:3001"]

# JWT Authentication
JWT_SECRET=secret-key

# MongoDB (using Docker service name)
MONGO_URI=mongodb://admin:your_password@mongo-ai:27017
MONGO_DB_NAME=studybuddy_ai

# AI Configuration
AI_REQUEST_TIMEOUT=60.0
DEFAULT_AI_MODEL=gpt-4o-mini
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# API Keys for AI Providers
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here