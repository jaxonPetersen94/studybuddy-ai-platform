{
  "name": "user-service",
  "version": "0.1.0",
  "description": "User service for authentication and account management.",
  "main": "server.ts",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "node dist/server.ts",
    "dev": "tsx watch src/server.ts",
    "migration:generate": "tsx ./node_modules/typeorm/cli.js migration:generate -d src/config/database.ts",
    "migration:run": "tsx ./node_modules/typeorm/cli.js migration:run -d src/config/database.ts",
    "migration:revert": "tsx ./node_modules/typeorm/cli.js migration:revert -d src/config/database.ts",
    "schema:drop": "tsx ./node_modules/typeorm/cli.js schema:drop -d src/config/database.ts"
  },
  "keywords": [
    "user",
    "auth",
    "service",
    "register",
    "login",
    "forgot-password"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^6.9.14",
    "pg": "^8.16.3",
    "typeorm": "^0.3.26"
  },
  "devDependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^6.4.15",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
